		private static void prime(int num)
		{
			if (num > 0 && a < 1000)
			{

				int i = 2;
				while (num % i != 0 && num != 1)
				{
					i++;
				}

				if (i <= num || num == 1)
				{
					Console.WriteLine($"{num} is not A prime number");
				}
				else

				{
					Console.WriteLine($"{num} is a prime number");
				}


			}
			else
			{
				Console.WriteLine(" too big or too small");
			}
			return;
			Console.ReadLine();
		}
